        <!--Gridi sisältää datatiedon-->
        <Grid Margin="192,10,10,10">
            <StackPanel x:Name="DataPanel" HorizontalAlignment="Left" Height="433" Margin="10,10,0,0" VerticalAlignment="Top" Width="470">
                <StackPanel>
                    <TextBlock Text="{Binding AllInfo}" />
                    <TextBlock Text="{Binding Nimi}" />
                    <TextBlock Text="{Binding Henkilotunnus}"/>
                    <TextBlock Text="{Binding Tilinumero}"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
