<Window x:Class="Speku.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:self="clr-namespace:Speku"

        mc:Ignorable="d"
        Title="MainWindow" Height="504" Width="700">
    <Grid>
        <TreeView x:Name="MainTreeView" Margin="0,0,505,0">
            <TreeViewItem x:Name="HenkiloTreeView" Header="Henkilöt">
            <TreeViewItem.ItemTemplate>
                <DataTemplate>
                    <TextBlock Foreground='Red' Text='{Binding Nimi}' />
                </DataTemplate>
            </TreeViewItem.ItemTemplate>
            </TreeViewItem>
        </TreeView>
